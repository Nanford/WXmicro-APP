/** pages/profile/profile.wxss - Redesigned to match competitor */
.profile-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8E4FF 0%, #F8F9FC 20%);
}

.header-section {
  padding: 60rpx 30rpx 30rpx;
}

.user-row {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #e0e0e0;
  margin-right: 24rpx;
}

.user-info {
  flex: 1;
}

.nickname-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-right: 12rpx;
}

.member-badge {
  font-size: 20rpx;
  color: #FF6B35;
  background: linear-gradient(90deg, #FFE8D9 0%, #FFDFCF 100%);
  padding: 4rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 500;
}

.member-expire {
  font-size: 24rpx;
  color: #999;
}

.vip-banner {
  margin: 0 30rpx 40rpx;
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE4B5 50%, #FFD18C 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 167, 38, 0.2);
}

.vip-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.vip-content {
  flex: 1;
}

.vip-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #B8860B;
  display: block;
  margin-bottom: 8rpx;
}

.vip-desc {
  font-size: 24rpx;
  color: #CD853F;
}

.btn-renew {
  width: 160rpx;
  height: 64rpx;
  border-radius: 32rpx;
  background: linear-gradient(90deg, #FFB347 0%, #FF9500 100%);
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-row {
  display: flex;
  justify-content: space-around;
  margin: 0 30rpx 40rpx;
  background: rgba(255, 243, 224, 0.6);
  border-radius: 16rpx;
  padding: 20rpx 0;
}

.feature-item {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #B8860B;
}

.feature-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.menu-list {
  background: #fff;
  margin: 0 30rpx;
  border-radius: 24rpx;
  padding: 10rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: var(--text-main);
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 24rpx;
}

.menu-arrow {
  color: #ccc;
  font-size: 28rpx;
}
