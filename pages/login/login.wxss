/** pages/login/login.wxss */
.login-container {
  height: 100vh;
  position: relative;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-area {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  background-color: #eee; /* Placeholder */
  border-radius: 40rpx;
  margin-bottom: 60rpx;
}

.welcome-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
  text-align: center;
  line-height: 1.5;
}

.action-area {
  margin-top: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-login {
  width: 600rpx !important;
  height: 88rpx;
  border-radius: 44rpx;
  background-color: #07C160;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  padding: 0;
}

.btn-guest {
  font-size: 28rpx;
  color: var(--text-grey);
  padding: 20rpx;
}

.agreement-area {
  position: absolute;
  bottom: 60rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}

.checkbox-container {
  display: flex;
  align-items: center;
}

checkbox .wx-checkbox-input {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%; 
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: var(--primary-color-start);
  border-color: var(--primary-color-start);
}

.agreement-text {
  color: var(--text-grey);
  margin-left: 10rpx;
}

.link {
  color: var(--primary-color-start);
}

.text-divider {
    color: var(--text-grey);
    margin: 0 4rpx;
}
