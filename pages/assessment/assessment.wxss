/** pages/assessment/assessment.wxss - Redesigned to match competitor */
.assessment-container {
  min-height: 100vh;
  background: #F8F9FC;
}

.filter-bar {
  padding: 20rpx 30rpx;
  white-space: nowrap;
  background: #fff;
}

.filter-item {
  display: inline-flex;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: var(--text-grey);
  background: #f5f5f5;
  border-radius: 28rpx;
}

.filter-item.active {
  background: linear-gradient(90deg, var(--primary-color-start), var(--primary-color-end));
  color: #fff;
  font-weight: 500;
}

.list-container {
  padding: 20rpx 30rpx;
}

.assess-card {
  display: flex;
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-cover {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #FFE4E9 0%, #FFF0E5 100%);
  margin-right: 24rpx;
  flex-shrink: 0;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.card-desc {
  font-size: 24rpx;
  color: var(--text-grey);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.card-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-row {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 22rpx;
  color: #FF4D4F;
  margin-right: 4rpx;
}

.currency {
  font-size: 24rpx;
  color: #FF4D4F;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF4D4F;
}

.count {
  font-size: 22rpx;
  color: #999;
  margin-left: 16rpx;
}

.btn-assess {
  width: 140rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: 2rpx solid var(--primary-color-start);
  color: var(--primary-color-start);
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
}

/* Floating gift icon */
.float-gift {
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  width: 120rpx;
  height: 120rpx;
}

.gift-icon {
  width: 100%;
  height: 100%;
}

.gift-tag {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  background: #FF6B35;
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  white-space: nowrap;
}
