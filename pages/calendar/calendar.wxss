/** pages/calendar/calendar.wxss - Redesigned to match competitor */
.calendar-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8E4FF 0%, #F8F9FC 25%);
}

.date-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.current-date {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-main);
}

.view-switch {
  display: flex;
  background: #f0f0f0;
  border-radius: 28rpx;
  padding: 4rpx;
}

.switch-btn {
  width: 80rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
  border-radius: 24rpx;
}

.switch-btn.active {
  background: #fff;
  color: var(--primary-color-start);
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.day-scroll {
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.day-list {
  display: flex;
  gap: 16rpx;
}

.day-item {
  width: 80rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.6);
}

.day-item.today {
  background: linear-gradient(180deg, var(--primary-color-start), var(--primary-color-end));
  box-shadow: 0 8rpx 20rpx rgba(107, 95, 232, 0.3);
}

.day-item.today .day-num,
.day-item.today .day-dot {
  color: #fff;
}

.day-num {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}

.day-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-top: 8rpx;
}

.day-dot.has-record {
  background: #5DD4A4;
}

.empty-card {
  margin: 40rpx 30rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.05);
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: var(--text-grey);
  text-align: center;
  margin-bottom: 40rpx;
}

.empty-btn {
  width: 280rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(90deg, var(--primary-color-start), var(--primary-color-end));
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(107, 95, 232, 0.3);
}

/* Month View */
.month-grid {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.week-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999;
}

.month-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.month-day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--text-main);
}

.month-day.today {
  background: linear-gradient(180deg, var(--primary-color-start), var(--primary-color-end));
  color: #fff;
}

.month-day.other-month {
  color: #ddd;
}
