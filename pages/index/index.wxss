/** pages/index/index.wxss - Match competitor design with safe area */
.home-container {
  padding-bottom: 120rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F3FF 0%, #FFFFFF 100%);
}

/* AI Card with proper margin to avoid capsule button */
.ai-card {
  margin: 30rpx;
  margin-top: 20rpx; /* Less top margin since page has navigation bar */
  min-height: 340rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F8F6FF 50%, #FFF5F8 100%);
  border-radius: 32rpx;
  display: flex;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 40rpx rgba(107, 95, 232, 0.12);
}

.ai-card-left {
  flex: 1;
  padding: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  max-width: 420rpx; /* Prevent text from overlapping with capsule button area */
}

.ai-greeting {
  font-size: 42rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 16rpx;
}

.ai-sub {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.ai-hint {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.ai-card-right {
  width: 280rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-right: 10rpx;
  padding-top: 20rpx;
}

.ai-avatar {
  width: 260rpx;
  height: 320rpx;
  object-fit: contain;
}

.ai-action-btn {
  width: 180rpx;
  height: 68rpx;
  border-radius: 34rpx;
  background: linear-gradient(90deg, #6B5FE8 0%, #8B7FFF 100%);
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(107, 95, 232, 0.35);
}

.ai-action-btn .arrow {
  margin-left: 8rpx;
  font-size: 24rpx;
}

/* Recommendation cards */
.recommend-section {
  padding: 0 30rpx;
}

.recommend-card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.04);
}

.card-tag {
  display: inline-block;
  font-size: 22rpx;
  color: var(--primary-color-start);
  padding: 6rpx 16rpx;
  background: rgba(107, 95, 232, 0.08);
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.card-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.card-content {
  flex: 1;
  margin-right: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
  display: block;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.card-btn {
  width: 120rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: 2rpx solid var(--primary-color-start);
  color: var(--primary-color-start);
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  flex-shrink: 0;
}
